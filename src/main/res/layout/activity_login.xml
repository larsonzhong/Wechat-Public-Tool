<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_height="60dip"
            android:background="@drawable/radius_border_login_title"
            android:layout_width="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="公众平台登录"
                android:textColor="#3986bc"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="#8e8e8e"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip">

        </LinearLayout>

        <RelativeLayout
            android:layout_height="80dip"
            android:background="@drawable/radius_border_login_middle"
            android:layout_width="fill_parent">

            <EditText
                android:id="@+id/login_edit_text_user_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="3dip"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:cursorVisible="true"
                android:gravity="left"
                android:hint="输入帐号"
                android:lines="1"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:shadowColor="#FFFFFF"
                android:textSize="15sp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:background="#8e8e8e"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip">

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_height="80dip"
            android:background="@drawable/radius_border_login_middle"
            android:layout_width="fill_parent">

            <EditText
                android:id="@+id/login_edit_text_pass_word"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="3dip"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:cursorVisible="true"
                android:gravity="left"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:shadowColor="#FFFFFF"
                android:textSize="15sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:paddingBottom="30dip"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:background="#8e8e8e"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="#8e8e8e"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip">

        </LinearLayout>

        <RelativeLayout
            android:layout_height="70dip"
            android:background="@drawable/radius_border_login_bottom"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/login_button_login"
                android:layout_width="100dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:background="@drawable/ensure_button_sure_bg" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>